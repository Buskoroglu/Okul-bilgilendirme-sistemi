<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Akademisyennavigation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/renk1">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="48dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/okulfoto" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="wrap_content"
            android:layout_height="324dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:useDefaultMargins="true">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:background="@drawable/yeni_resim"
                android:scaleType="centerInside"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/academi"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:background="@drawable/yeni_resim"
                android:scaleType="centerInside"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/food"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:background="@drawable/yeni_resim"
                android:scaleType="centerInside"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/duyuru"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:background="@drawable/yeni_resim"
                android:scaleType="centerInside"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/etkinicon"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:background="@drawable/yeni_resim"
                android:scaleType="centerInside"
                app:layout_column="0"
                app:layout_row="2"
                app:srcCompat="@drawable/examicon"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:background="@drawable/yeni_resim"
                android:scaleType="centerInside"
                app:layout_column="1"
                app:layout_row="2"
                app:srcCompat="@drawable/webicon"
                tools:ignore="SpeakableTextPresentCheck" />


        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:visibility="invisible"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.drawerlayout.widget.DrawerLayout>